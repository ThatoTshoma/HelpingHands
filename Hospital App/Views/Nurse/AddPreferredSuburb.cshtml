@model Hospital_App.CollectionViewModel.PreferredSuburbCollection
@{
    ViewData["Title"] = "Select Preferred Suburb";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">City</li>
        <li class="active">Add City</li>
    </ol>
</div>

<div class="container px-6 mx-auto grid">

<h2><b>@ViewData["Title"]</b></h2>


    <form asp-controller="Nurse" asp-action="AddPreferredSuburb" method="post">
        <hr />

        <div class="form-group">
            <label asp-for="PreferedSuburb.SuburbID"></label>
            <select asp-for="PreferedSuburb.SelectedSuburbs" asp-items="@(new SelectList(Model.Suburb, "SuburbID", "SuburbName"))" class="form-control" id="Dropdown" multiple>
            </select>
            <span asp-validation-for="PreferedSuburb.SelectedSuburbs" class="text-danger"></span>
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Suburb</button>

        </div>
    </form>
</div>

@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="~/css/chosen.min.css" rel="stylesheet" />
    <script src="~/js/chosen.jquery.min.js"></script>
    <script>
        $(function () {

            $("#Dropdown").chosen({
                width: "50%"
            });

        });

    </script>
}
