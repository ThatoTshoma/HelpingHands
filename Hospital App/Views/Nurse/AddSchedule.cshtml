@model Hospital_App.CollectionViewModel.ScheduleCollection
@{
    ViewData["Title"] = "Add Schedule";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Shedule</li>
        <li class="active">Add Schedule</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

<h2><b>@ViewData["Title"]</b></h2>

<form asp-controller="Nurse" asp-action="AddSchedule" method="post">
    <input asp-for="Schedule.ContractID" type="hidden" />


    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Schedule.Contract.ContractDate)
                </dt>
                <dd>
                    <span>@Model.Contracts.FirstOrDefault(c => c.ContractID == Model.Schedule.ContractID)?.ContractDate</span>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Schedule.Contract.AddressLine1)
                </dt>
                <dd>
                    <span>@Model.Contracts.FirstOrDefault(c => c.ContractID == Model.Schedule.ContractID)?.AddressLine1</span>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Schedule.Contract.AddressLine2)
                </dt>
                <dd>
                    <span>@Model.Contracts.FirstOrDefault(c => c.ContractID == Model.Schedule.ContractID)?.AddressLine2</span>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Schedule.Contract.WoundDesc)
                </dt>
                <dd>
                    <span>@Model.Contracts.FirstOrDefault(c => c.ContractID == Model.Schedule.ContractID)?.WoundDesc</span>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Schedule.Contract.Status)
                </dt>
                <dd>
                    <span>@Model.Contracts.FirstOrDefault(c => c.ContractID == Model.Schedule.ContractID)?.Status</span>
                </dd>

            </dl>
        </div>
        <hr style="border: 0; height: 4px; background: black;">



        <div class="form-group">
            <label asp-for="Schedule.ScheduleDate" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Schedule.ScheduleDate" class="form-control" type="date" />
                @if (ViewBag.Messege != null)
                {
                    <span class="text-danger">@ViewBag.Messege</span>
                }
                <span asp-validation-for="Schedule.ScheduleDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Schedule.ApproxArriTime" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Schedule.ApproxArriTime" class="form-control" type="time">
                <span asp-validation-for="Schedule.ApproxArriTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Schedule.ArriveTime" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Schedule.ArriveTime" class="form-control" type="time">
                <span asp-validation-for="Schedule.ArriveTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Schedule.DepartTime" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Schedule.DepartTime" class="form-control" type="time">
                <span asp-validation-for="Schedule.DepartTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Schedule.WoundCondition" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <textarea asp-for="Schedule.WoundCondition" class="form-control"></textarea>
                <span asp-validation-for="Schedule.WoundCondition" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="Schedule.Note" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <textarea asp-for="Schedule.Note" class="form-control"></textarea>
                <span asp-validation-for="Schedule.Note" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </div>
    </div>
</form>
</div>

@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="~/css/chosen.min.css" rel="stylesheet" />
    <script src="~/js/chosen.jquery.min.js"></script>
    <script>
        $(function () {

            $("#Dropdown").chosen({
                width: "50%"
            });

        });

    </script>
}
