@model List<PreferedSuburb>
@{
    ViewData["Title"] = "List Of Preferred Suburb";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Preferred Suburb</li>
        <li class="active">View Suburb</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

<h2><b>@ViewData["Title"]</b></h2>
<hr />

<p>
    <a asp-action="AddPreferredSuburb" asp-controller="Nurse" class="btn btn-primary">Add Preferred Suburb</a>
</p>

    <table class="table table-hover">
    <thead>
        <tr>
            <th>Suburb Name</th>
            <th>Postal Code</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var preferedSuburb in Model)
        {
            <tr>
                <td>@preferedSuburb.Suburb.SuburbName</td>
                <td>@preferedSuburb.Suburb.PostalCode</td>

                <td>

                    <a asp-controller="Nurse" asp-action="DeletePreferedSuburb" asp-route-id="@preferedSuburb.PreferedSuburbID">
                            <i class="fa fa-trash" style="font-size: 19px; color: red" title="Delete Prefered Surbub"></i>
                    </a>
                    <a asp-action="DeletePreferedSuburb" asp-route-id="@preferedSuburb.PreferedSuburbID"></a>

                </td>

            </tr>
        }
    </tbody>
</table>
</div>