@model Hospital_App.Models.Contract
@{
    ViewData["Title"] = "View Contract";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Contract</li>
        <li class="active">View Contracts</li>
    </ol>
</div>

<div class="container px-6 mx-auto grid">

<h2><b>@ViewData["Title"]</b></h2>

<form method="post" asp-action="CareContract">
    <input asp-for="ContractID" hidden />
       
        <div class="col-md-4">
            <div class="col-4">
                <div class="form-group">

                    <label asp-for="Status"></label>
                    <select asp-for="Status" class="form-control">
                        <option value="New">New</option>
                        <option value="Assigned">Assigned</option>
                        <option value="Closed">Closed</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
               
                </div>
                <div class="col">
                    <input type="submit" class="btn btn-info w-75" value="Search" />
                </div>
                <br /> 
                    
            </div>
        </div>
        <br />
        <table class ="table table-hover">
    <thead>
        <tr>
            <th>Contract Date</th>
            <th>Address Line 1</th>
            <th>Address Line 2</th>
            <th>Suburb Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Wound Description</th>
            <th>Status</th>
            <th>Patient</th>
        </tr>
    </thead>
    <tbody>
   
    </tbody>
</table>

</form>
</div>
@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script>
        $('.datepicker').datepicker({
            format: 'dd-mm-yyyy',
            autoclose: true,
            todayHighlight: true
        });
    </script>
}
