@model List<PatientChronic>

@{
    ViewData["Title"] = "List Of Chronic Conditions";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Chronic Condition</li>
        <li class="active">View Chronic Condition</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

<h2><b>@ViewData["Title"]</b></h2>
<hr />

<p>
    <a asp-action="AddChronic" asp-controller="Patient" class="btn btn-primary">Add New Chronic</a>
</p>

    <table class="table table-hover">
    <thead>
        <tr>
            
            <th>Chronic Names</th>
            <th>Chronic Description</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var nurse in Model)
        {
            <tr>
                <td>@nurse.Chronic.ChronicName</td>
                <td>@nurse.Chronic.Description</td>


                <td>
                
                        <a  asp-action="DeleteChronic" asp-route-id="@nurse.PatientChronicID">
                        <i class="fa fa-trash" style="font-size: 19px; color: red" title="Delete Chronic Condition"></i>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
</div>