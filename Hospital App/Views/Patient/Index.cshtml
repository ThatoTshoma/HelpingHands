@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Dashboard</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><b>Patient Dashboard</b></h1>
    </div>
</div>

<p class="text-success">@ViewBag.Messege</p>
<div class="panel panel-container">
    <div class="row">
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-teal panel-widget border-right">
                <a asp-controller="Patient" asp-action="AddContract" style="text-decoration: none; color: inherit;">
                    <div class="row no-padding">
                        <em class="fa fa-book color-blue" style="font-size: 60px;"></em>
                        <div class="large count"></div>
                        <div class="text-muted" style="font-size: 18px;">Create Contract</div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-blue panel-widget border-right">
                <a asp-controller="Patient" asp-action="AddChronic" style="text-decoration: none; color: inherit;">

                    <div class="row no-padding">
                        <em class="fa fa-medkit color-red" style="font-size: 60px;"></em>
                        <div class="large count"></div>
                        <div class="text-muted" style="font-size: 18px;">Chronic Conditions</div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-blue panel-widget border-right">
                <a asp-controller="Patient" asp-action="ViewVisit" style="text-decoration: none; color: inherit;">

                    <div class="row no-padding">
                        <em class="fa fa-map-marker color-orange" style="font-size: 60px;"></em>
                        <div class="large count"></div>
                        <div class="text-muted" style="font-size: 18px;">Visits</div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-blue panel-widget border-right">
                <a asp-controller="Patient" asp-action="ViewContract" style="text-decoration: none; color: inherit;">

                    <div class="row no-padding">
                        <em class="fa fa-book color-green" style="font-size: 60px;"></em>
                        <div class="large count"></div>
                        <div class="text-muted" style="font-size: 18px;">View Contracts</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
</div>

