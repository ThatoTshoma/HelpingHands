@model IEnumerable<Nurse>
@{
    ViewData["Title"] = "List Of Nurses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Nurses</li>
        <li class="active">List of Nurses</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

<h2><b>@ViewData["Title"]</b></h2>
<hr />

<p>
    <a asp-action="AddNurse" asp-controller="Admin" class="btn btn-primary">Create New</a>
</p>

    <table class="table table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>ID Numer</th>
            <th>Contact Number</th>
            <th>Email</th>
            <th>Gender</th>
            <th>
                <a asp-action="AddNurse">Action</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var nurse in Model)
        {
            <tr>
                <td>@nurse.FirstName</td>
                <td>@nurse.Surname</td>
                <td>@nurse.IDNumber</td>
                <td>@nurse.ContactNumber</td>
                <td>@nurse.EmailAddress</td>
                <td>@nurse.Gender</td>
                <td>
                    <a asp-controller="OfficeManager" asp-action="UpdateNurse" asp-route-ID="@nurse.NurseID" class="btn btn-primary mx-1">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>