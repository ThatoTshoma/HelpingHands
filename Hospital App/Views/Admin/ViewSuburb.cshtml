@model IEnumerable<Suburb>
@{
    ViewData["Title"] = "List Of Suburbs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Suburbs</li>
        <li class="active">View Suburb</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

<h2><b>@ViewData["Title"]</b></h2>

<p>
    <a asp-action="AddSuburb" asp-controller="Admin" class="btn btn-primary">Add New Suburb</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Suburb Name</th>
            <th>Postal Code</th>
            <th>City</th>
            <th>Action</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var nurse in Model)
        {
            <tr>
                <td>@nurse.SuburbName</td>
                <td>@nurse.PostalCode</td>
                <td>@nurse.City.CityName</td>


                <td>
                    <a asp-action="EditAppointment" asp-action="UpdateNurse" asp-route-id="@nurse.SuburbID">
                        <i class="fa fa-pencil-square-o" style="font-size: 19px"></i>
                    </a> |
                    <a asp-action="DetailOfAppointment" asp-action="UpdateNurse" asp-route-id="@nurse.CityID">
                        <i class="fa fa-info-circle" style="font-size: 19px; color: lightblue"></i>
                    </a> |
                    <a asp-action="DeleteAppointment" asp-action="UpdateNurse" asp-route-id="@nurse.SuburbID">
                        <i class="fa fa-trash" style="font-size: 19px; color: red"></i>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
</div>