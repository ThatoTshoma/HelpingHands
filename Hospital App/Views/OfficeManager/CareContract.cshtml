@model List<Hospital_App.Models.Contract>

@{
    ViewBag.Title = "Contract Information";
}

<h2>Contract Information</h2>

@using (Html.BeginForm("GetContractInformation", "Contract", FormMethod.Post))
{
    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        @Html.TextBox("startDate", null, new { @class = "form-control datepicker" })
    </div>
    <div class="form-group">
        <label for="EndDate">End Date:</label>
        @Html.TextBox("endDate", null, new { @class = "form-control datepicker" })
    </div>
    <div class="form-group">
        <label for="Status">Status:</label>
        @Html.TextBox("status", null, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Contract Date</th>
            <th>Address Line 1</th>
            <th>Address Line 2</th>
            <th>Suburb Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Wound Description</th>
            <th>Status</th>
            <th>Nurse</th>
            <th>Patient</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contract in Model)
        {
            <tr>
                <td>@contract.AddressLine1</td>
                <td>@contract.AddressLine2</td>
                <td>@contract.Suburb</td>
                <td>@contract.StartDate</td>
                <td>@contract.EndDate</td>
                <td>@contract.WoundDesc</td>
                <td>@contract.Status</td>
                <td>@contract.Nurse</td>
                <td>@contract.Patient</td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script>
        $('.datepicker').datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true,
            todayHighlight: true
        });
    </script>
}
