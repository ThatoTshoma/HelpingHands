@using Hospital_App.Models
@model Hospital_App.CollectionViewModel.NurseCollection
@{
    ViewData["Title"] = "Add Nurse";
    Layout = "~/Views/Shared/_OfficeManagerLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Nurse</li>
        <li class="active">Add Nurse</li>
    </ol>
</div>

<div class="container px-6 mx-auto grid">

    <h2><b>@ViewData["Title"]</b></h2>

    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <hr />
        <div class="form-horizontal">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationUser.UserName" class="control-label col-md-2"></label>
                <div class="col-md-10">

                    <input asp-for="ApplicationUser.UserName" class="form-control" />
                    <span asp-validation-for="ApplicationUser.UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nurse.FirstName" class="control-label col-md-2"></label>
                <div class="col-md-10">

                    <input asp-for="Nurse.FirstName" class="form-control" />
                    <span asp-validation-for="Nurse.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nurse.Surname" class="control-label col-md-2"></label>
                <div class="col-md-10">

                    <input asp-for="Nurse.Surname" class="form-control" />
                    <span asp-validation-for="Nurse.Surname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nurse.IDNumber" class="control-label col-md-2"></label>
                <div class="col-md-10">

                    <input asp-for="Nurse.IDNumber" class="form-control"  />
                    <span asp-validation-for="Nurse.IDNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.Email" class="control-label col-md-2"></label>
                <div class="col-md-10">

                    <input asp-for="ApplicationUser.Email" class="form-control" />
                    <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nurse.ContactNumber" class="control-label col-md-2"></label>
                <div class="col-md-10">

                    <input asp-for="Nurse.ContactNumber" class="form-control" />
                    <span asp-validation-for="Nurse.ContactNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nurse.Gender" class="control-label col-md-2"></label>
                <div class="col-md-10">

                    <select asp-for="Nurse.Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="Nurse.Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ApplicationUser.Password" class="control-label col-md-2"></label>
                <div class="col-md-10">

                    <input asp-for="ApplicationUser.Password" class="form-control" />
                    <span asp-validation-for="ApplicationUser.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.ConfirmPassword" class="control-label col-md-2"></label>
                <div class="col-md-10">

                    <input asp-for="ApplicationUser.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ApplicationUser.ConfirmPassword" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Add Nurse</button>
                </div>
            </div>

        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
